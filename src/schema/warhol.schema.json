{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Config",
  "description": "A Warhol configuration object",
  "type": "object",
  "properties": {
    "styleguideUrl": {
      "description": "The URL to find your styleguide on",
      "type": "string",
      "format": "url"
    },
    "breakpoints": {
      "description": "The screen widths with which to take snapshots",
      "type": "array",
      "items": {
        "type": "integer",
        "minimum": 100
      },
      "minItems": 1,
      "uniqueItems": true
    },
    "colorSources": {
      "description": "Selectors for elements that define the allowed colors",
      "type": "array",
      "items": {
        "type": "string"
      },
      "minItems": 0
    },
    "colorSourceProperties": {
      "description": "CSS properties to use as sources in the color sources elements",
      "type": "array",
      "items": {
        "type": "string",
        "enum": [
          "background-color",
          "border-bottom-color",
          "border-left-color",
          "border-right-color",
          "border-top-color",
          "box-shadow",
          "color",
          "lighting-color",
          "outline-color",
          "text-decoration-color",
          "text-shadow"
        ]
      },
      "minItems": 0
    },
    "components": {
      "description": "Component definitions",
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "componentUrl": {
            "description": "The URL to find your components on",
            "type": "string",
            "format": "url"
          },
          "name": {
            "description": "The name of the selected component",
            "type": "string"
          },
          "source": {
            "description": "The selector used to find components in the source",
            "type": "string"
          },
          "target": {
            "description": "The selector used to find component instances in the page",
            "type": "string"
          },
          "onEvent": {
            "description": "Event to listen to before collecting snapshots",
            "type": "string",
            "default": "DOMContentLoaded"
          }
        }
      }
    }
  },
  "required": [ "components" ],
  "dependencies": {
    "colorSourceProperties": [ "colorSources" ]
  }
}
